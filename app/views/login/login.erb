  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header login_modal_header">
        <h2 class="modal-title" id="myModalLabel">Login to Your Account</h2>
      </div>
      <div class="modal-body login-modal">
        <div class="clearfix"></div>
        <div id='social-icons-conatainer'>
          <div>
            <p id="msg"></p>
          </div>
          <%= form_tag('/login/login', :id=>'loginForm') do %>
              <div class='modal-body-left' style="margin-left: 5px">
                <div class="form-group">
                  <input type="email" id="email" name="email" placeholder="Enter your email" value="<%=params[:email] if params[:email].present? %>" class="form-control login-field" autofocus autocomplete >
                  <i class="fa fa-user login-field-icon"></i>
                </div>

                <div class="form-group">
                  <input type="password" id="pass" name="pass" placeholder="Password" value="" class="form-control login-field">
                  <i class="fa fa-lock login-field-icon"></i>
                </div>

                <button class="btn btn-success modal-login-btn" name="commit" value="Login" type="submit">Login</button>
                <a href="/login/lostPassword" class="login-link text-center" name="commit" >Lost your password?</a>
              </div>
          <%end%>

          <div class='modal-body-right'>
            <div class="modal-social-icons">
              <a href='#' class="btn btn-default facebook"> <i class="fa fa-facebook modal-icons"></i> Sign In with Facebook </a>
              <a href='#' class="btn btn-default google"> <i class="fa fa-google-plus modal-icons"></i> Sign In with Google </a>
            </div>
          </div>
          <div id='center-line'> OR </div>
        </div>
        <div class="clearfix"></div>

        <div class="form-group modal-register-btn">
          <a href="/login/register" class="btn btn-default" > New User Please Register</a>
        </div>
      </div>
      <div class="clearfix"></div>
      <div class="modal-footer login_modal_footer">
      </div>
    </div>
  </div>
