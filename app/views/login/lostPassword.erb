<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header login_modal_header">
      <h2 class="modal-title" id="myModalLabel">Forgot My Password</h2>
    </div>
    <div class="modal-body login-modal">
      <div class="clearfix"></div>
      <div id='social-icons-conatainer'>
        <div>
          <p id="msg"></p>
        </div>
        <%= form_tag('/login/login', :id=>'lostPasswordForm') do %>
            <div class='modal-body-center' style="margin-left: 5px">
              <div class="form-group">
                <input type="email" id="email" name="email" placeholder="Enter your email" value="<%=params[:email] if params[:email].present? %>" class="form-control login-field" autofocus autocomplete >
                <i class="fa fa-user login-field-icon"></i>
              </div>

              <div class="form-group modal-register-btn">
                <button class="btn btn-success" name="commit" value="Reset" type="submit">Send Reset Link</button>
                <a href="/login/login" class="btn btn-default"  >Back To Sign In</A>
              </div>
            </div>
        <%end%>
      </div>
      <div class="clearfix"></div>

    </div>
    <div class="clearfix"></div>
    <div class="modal-footer login_modal_footer">
    </div>
  </div>
</div>
