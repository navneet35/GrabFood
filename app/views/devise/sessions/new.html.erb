<h2>Log in</h2>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
    <table class="table table-striped">
      <caption>
        <strong>Sign In</strong>
      </caption>
      <tr>
        <td width="50%"><%= f.label :email %></td>
        <td><%= f.email_field :email, :autofocus => true ,:class=>"form-control"%></td>
      </tr>
      <tr>
        <td width="50%"><%= f.label :password %></td>
        <td><%= f.password_field :password,:class=>"input input-medium" %></td>
      </tr>
      <% if devise_mapping.rememberable? -%>
          <tr>
            <td width="50%"><%= f.check_box :remember_me %></td>
            <td><%= f.label :remember_me %></td>
          </tr>
      <% end -%>
      <tr>
        <td width="50%"></td>
        <td><%= f.submit "Sign in", class: "btn btn-success btn-small" %></td>
      </tr>
    </table>
<% end %>
<br/>
<a class="btn btn-block btn-social btn-twitter">
  <i class="fa fa-twitter"></i> Sign in with Twitter
</a>
<%= link_to "Sign in with Google", user_omniauth_authorize_path(:google) ,class: "btn btn-block btn-social btn-google-plus", style: "align: left"%>

<%= link_to "Sign in with Facebook", user_omniauth_authorize_path(:facebook),class: "btn btn-block btn-social btn-facebook"%>
<br/>

<%= render "devise/shared/links" %>
