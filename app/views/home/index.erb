<h1>Hi this is the home page</h1>
  <div>
    <div class="login_modal_header">
      <h2 class="modal-title" id="myModalLabel">Find Food</h2>
    </div>
    <div class="login-modal">
      <div class="clearfix"></div>
        <div class="modal-dialog">
          <p id="msg" style="display: none"></p>
        </div>
        <div class="modal-dialog">
            <%= form_tag('/home/findRestaurants', :id=>'findFoodForm') do %>
              <input type="hidden" id="cityData" value=0>
              <input type="hidden" id="localityData" value=0>
              <input type="hidden" id="locationData" value=0>
              <div class="form-group" style="display: none;">
                <input type="text" id="city" name="city" placeholder="Enter your city" value="<%=params[:city] if params[:city].present? %>" class="form-control login-field" autofocus autocomplete >
              </div>
              <div class="form-group">
                <input type="text" id="locality" name="locality" placeholder="Enter your locality" value="<%=params[:locality] if params[:locality].present? %>" class="form-control login-field" autofocus autocomplete >
              </div>
              <div class="form-group">
                <input type="text" id="location" name="location" placeholder="Enter your location" value="<%=params[:location] if params[:location].present? %>" class="form-control login-field">
              </div>
              <button class="btn btn-success modal-login-btn" name="commit" value="Login" type="submit">Find Food</button>
            <%end%>
        </div>
      </div>
      <div class="clearfix"></div>
      <div class="modal-footer login_modal_footer">
    </div>
  </div>